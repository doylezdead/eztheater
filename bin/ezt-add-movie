#!/bin/bash
prefix='/websrv/content/secure/static/media'
filename=`echo $1 | rev | cut -d'/' -f1 | rev`
echo "Name: "
read name
echo "Genre: "
read genre
echo "Year:"
read year


jq ".movies |= .+ [{
    \"name\":\"$name\",
    \"genre\":\"$genre\",
    \"year\": \"$year\",
    \"file\":\"$filename\",
    \"subs\":\"$2\"
}]" $prefix/index.json > $prefix/index2.json

mv $prefix/index2.json $prefix/index.json
mv $1 $prefix/movies/

if [ ! -z $2 ]; then
    mv $2 $prefix/movies/
fi
